/* pages/call/call.wxss */
.container {
  padding: 20rpx;
}

.picker {
  margin: 20rpx 0;
  padding: 20rpx;
  background-color: #2196F3;
  color: white;
  border-radius: 10rpx;
  text-align: center;
  font-size: 32rpx;
  cursor: pointer;
}

.districts {
  margin: 20rpx 0;
}

.district {
  padding: 20rpx;
  background-color: #e0f7fa;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  text-align: center;
  font-size: 28rpx;
  cursor: pointer;
}

.hospitals {
  margin: 20rpx 0;
}

.hospital-list {
  padding: 20rpx;
  background-color: #f1f8e9;
  border-radius: 10rpx;
}

.hospital {
  padding: 20rpx;
  background-color: #ffecb3;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  text-align: center;
  font-size: 28rpx;
  cursor: pointer;
}

.hospital-details {
  margin: 20rpx 0;
  padding: 20rpx;
  background-color: #fff3e0;
  border-radius: 10rpx;
}

.hospital-details view {
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

.phone-input {
  width: 100%;
  padding: 20rpx;
  margin: 20rpx 0;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.submit-button,
.sos-button {
  width: 100%;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #4caf50;
  color: white;
  border: none;
  border-radius: 10rpx;
  font-size: 32rpx;
  text-align: center;
  cursor: pointer;
}

.sos-button {
  background-color: #f44336;
}
